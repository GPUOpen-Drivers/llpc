    temp += imageAtomicCompSwap(iImg, ivec2(7, 7), 8, 9);

    utemp += imageAtomicAdd(uImg, ivec2(7, 7), 9u);
    utemp += imageAtomicMin(uImg, ivec2(7, 7), 9u);
    utemp += imageAtomicMax(uImg, ivec2(7, 7), 9u);
