    utemp += imageAtomicXor(uImg, ivec2(7, 7), 9u);
    utemp += imageAtomicExchange(uImg, ivec2(7, 7), 9u);
    utemp += imageAtomicCompSwap(uImg, ivec2(7, 7), 8u, 9u);

    ftemp += imageAtomicExchange(fImg, ivec2(7, 7), 9.0f);

    m1 = temp;
    m2 = utemp;
    m3 = ftemp;
}

